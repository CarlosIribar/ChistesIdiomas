<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iribar.carlos.myapplication.Chiste"
    android:background="#ffffc210"
    android:clickable="false"
    >


    <TextView
        android:text="@string/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"


        android:textSize="35dp"
        android:typeface="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/idioma"
        android:id="@+id/idioma"
        android:singleLine="true"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/pregunta"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:id="@+id/pregunta"
        android:textSize="40dp"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cachichen"
        android:id="@+id/respuesta"
        android:textSize="40dp"

        android:layout_marginTop="54dp"
        android:layout_below="@+id/idioma"
        android:textAlignment="center"
        android:singleLine="false"
        android:layout_centerHorizontal="true"

        android:layout_gravity="center"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVA PALABRA"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white" />

</RelativeLayout>
